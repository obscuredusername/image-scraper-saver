# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/image-scraper

# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=image-scraper

# Application Settings
IMAGES_SAVE_DIR=/var/www/images
WATERMARK_IMAGE_PATH=./watermark/watermark.png

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Optional: Connection Pool Settings
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_POOL_RECYCLE=3600
# DB_POOL_TIMEOUT=30

# Optional: SSL Configuration (for production)
# DB_SSL_MODE=prefer
# DB_SSL_ROOT_CERT=/path/to/root-cert.pem
